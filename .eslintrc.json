{
  "extends": ["airbnb-typescript-prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      { "printWidth": 80, "singleQuote": true, "trailingComma": "all" }
    ]
  },
  "overrides": [
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.test.ts", "*.test.tsx"],
      "rules": {
        "import/no-extraneous-dependencies": "off",
        "react/react-in-jsx-scope": "off"
      }
    }
  ]
}
